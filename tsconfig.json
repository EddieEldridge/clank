{
    "compilerOptions": {
        "target": "es2020", 
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "outDir": "out"
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}